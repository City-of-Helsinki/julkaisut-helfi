{
    "name": "city-of-helsinki/drupal-julkaisut-helfi",
    "description": "Project template for Drupal 9 projects with a relocated document root",
    "type": "project",
    "license": "MIT",
    "homepage": "https://github.com/City-of-Helsinki/julkaisut-helfi",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "composer/installers": "^1.9",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^2.3",
        "drupal/better_exposed_filters": "^5.0@beta",
        "drupal/content_language_access": "^1.0",
        "drupal/core-composer-scaffold": "~9.3.0",
        "drupal/core-project-message": "~9.3.0",
        "drupal/core-recommended": "~9.3.0",
        "drupal/custom_book_block": "^1.0@alpha",
        "drupal/devel": "^4.0",
        "drupal/easy_breadcrumb": "^1.13",
        "drupal/eu_cookie_compliance": "^1.18",
        "drupal/facets": "1.x-dev",
        "drupal/file_mdm": "^2.1",
        "drupal/focal_point": "^1.5",
        "drupal/gtm": "^1.5",
        "drupal/gutenberg": "^2.0@beta",
        "drupal/helfi_azure_fs": "^1.0",
        "drupal/jquery_ui_touch_punch": "^1.0",
        "drupal/language_switcher_extended": "^1.0@beta",
        "drupal/masquerade": "^2.0@beta",
        "drupal/media_library_edit": "^1.0@alpha",
        "drupal/merge_translations": "^1.1",
        "drupal/metatag": "^1.14",
        "drupal/pathauto": "^1.8",
        "drupal/popular_search_keywords": "^1.0",
        "drupal/recreate_block_content": "^2.0",
        "drupal/redirect": "^1.6",
        "drupal/redis": "^1.4",
        "drupal/schema_metatag": "^2.1",
        "drupal/search_api": "^1.17",
        "drupal/search_api_autocomplete": "^1.4",
        "drupal/search_api_solr": "^4.1",
        "drupal/simple_sitemap": "^3.7",
        "drupal/smart_trim": "^1.3",
        "drupal/smtp": "^1.0",
        "drupal/stage_file_proxy": "1.x-dev",
        "drupal/tvi": "^1.0@RC",
        "drupal/twig_tweak": "^2.6",
        "drupal/views_infinite_scroll": "^2.0",
        "drush/drush": "^10.3",
        "npm-asset/jquery-ui-touch-punch": "^0.2.3",
        "oomphinc/composer-installers-extender": "^2.0",
        "platformsh/config-reader": "^2.3"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
          "php": "8.0"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "acquia/blt": true,
            "drupal/core-project-message": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "drupal-scaffold": {
            "allowed-packages": [
                "drupal/core"
            ],
            "locations": {
                "web-root": "./public"
            },
            "file-mapping": {
                "[project-root]/.editorconfig": false
            }
        },
        "enable-patching": true,
        "installer-paths": {
            "public/core": [
                "type:drupal-core"
            ],
            "public/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "public/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "public/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "public/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "public/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "public/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "drupal/core": {
                "Make exposed filter values available as tokens for text areas": "https://www.drupal.org/files/issues/2020-03-02/exposed_filter_tokens-2761273-21.patch",
                "Notice: Undefined offset: 1 en Drupal\\Core\\StringTranslation\\PluralTranslatableMarkup->render()": "https://www.drupal.org/files/issues/2018-06-29/notice_undefined-2863629-11.patch",
                "Cannot save unpublished versions of published content for users without manage book privileges": "https://www.drupal.org/files/issues/2020-07-14/2918537-61.patch",
                "Untranslated menu items are displayed in menus": "https://www.drupal.org/files/issues/2020-05-14/2466553-75-d91x.patch",
                "Return translated term name on views Content: Has taxonomy term ID (with depth)": "https://www.drupal.org/files/issues/2021-03-19/taxonomy_translation_2765297_63.patch"
            },
            "drupal/gutenberg": {
                "Insert Image or Media shows blank modal Media Library window": "https://www.drupal.org/files/issues/2020-06-09/gutenberg-d9_media_library_support-3150127-4.patch",
                "Video embed block not working in multi-language environment with shortcode for default language": "https://www.drupal.org/files/issues/2020-09-10/issue-3150008-6.patch",
                "Incorrect watchdog_exception() usage": "https://www.drupal.org/files/issues/2020-09-10/issue-3170264-2.patch",
                "Metadata bubbling error": "https://www.drupal.org/files/issues/2020-09-04/gutenberg-fix-metadata-bubbling-3078027-13.patch",
                "Inserting a link to a paragraph block returns an error": "https://www.drupal.org/files/issues/2020-06-08/gutenberg-add-type-to-content-search-ajax-call-3149823.patch",
                "Stuck loading Gutenberg (JS errors) when using Gutenberg with Drupal 9.2": "https://git.drupalcode.org/project/gutenberg/-/commit/ffe0bfdd2a37d4953c9d2e3a67e7fa4e5ecd79a7.patch"
            },
            "drupal/token": {
              "Book parents translation": "https://www.drupal.org/files/issues/2018-06-28/token_8_1_3_2982284_parents_translation_02.patch"
            },
            "drupal/facets": {
                "Create views plugins to render facets and summaries in filters and areas": "https://www.drupal.org/files/issues/2020-09-22/facet-3073444-104-Allow-facets-filter-in-views.patch"
            },
            "drupal/custom_book_block": {
                "Missing core book dependency on custom_book_block.info.yml file": "https://www.drupal.org/files/issues/2021-07-01/book-dependency-3221650-2.patch",
                "Error: Call to a member function getCurrentRequest() on null (Drupal 9.2.x)": "https://www.drupal.org/files/issues/2021-07-01/call-to-a-member-function-3221656-2.patch",
                "Place custom book block from block layout is not working in Drupal 9.2.x": "https://www.drupal.org/files/issues/2021-07-01/place-custom-book-block-3221654-2.patch"
            },
            "drupal/language_switcher_extended": {
                "Does not link to translated content": "./patches/language_switcher_extended-issue-3128516.patch"
            },
            "drupal/views_infinite_scroll": {
                "Allow new_content JS event listeners access to the actual new content": "https://www.drupal.org/files/issues/2020-09-29/views_infinite_scroll-3173923-2.patch"
            },
            "drupal/content_language_access": {
                "Book navigation links not available on translations [TODO]": "./patches/content_language_acccess.patch"
            },
            "drupal/popular_search_keywords": {
                "Custom template": "./patches/popular_search_keywords.patch"
            }
        },
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://repository.drupal.hel.ninja"
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require-dev": {
        "drupal/stage_file_proxy": "^1.2"
    }
}
