<div class="share-links">
  <h6 class="share-links__heading">{{ 'Share'|t }}:</h6>
  <a
    class="share-links__link"
    href="{{ 'https://www.addtoany.com/add_to/%s?linkurl=%s&amp;linkname=%s'|format(
      'facebook', url|url_encode, title|url_encode
    ) }}"
    target="_blank"
  >
    <span class="visually-hidden">{{ 'Share on Facebook' | t }}</span>
    <i class="hds-icon hds-icon--facebook hds-icon--size-s" aria-hidden="true"></i>
  </a>
  <a
    class="share-links__link"
    href="{{ 'https://www.addtoany.com/add_to/%s?linkurl=%s&amp;linkname=%s'|format(
      'twitter', url|url_encode, title|url_encode
    ) }}"
    target="_blank"
  >
    <span class="visually-hidden">{{ 'Share on Twitter' | t }}</span>
    <i class="hds-icon hds-icon--twitter hds-icon--size-s" aria-hidden="true"></i>
  </a>
</div>
